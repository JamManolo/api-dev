%ul.leagues.list-group
 %li.list-group-item
  %h3.list-group-item-heading= "FREE FANTASY FOOTBALL . INFO"
  %ul.list-group
   %li.list-group-item
    - @groups.each do |group_name,teams|
     %hr
     .row.list-group-item-heading
      .col-md-4.col-md-offset-4= "GROUP #{group_name}"
     - teams.each do |team|
      .row
       .col-md-4.col-md-offset-4
        = link_to team.name, team_url(team)

