%h3= "Leagues#show"

%ul.reports.list-group
 %li.list-group-item
  %h3.list-group-item-heading= "#{@league.name} - #{@league.country}"
  %ul.list-group
   %li.list-group-item
    .row.list-group-item-heading
     .col-md-8.col-md-offset-2
      = "Latest match date: #{@league.latest_match_date.in_time_zone.strftime('%a %b %d, %Y at %H:%M')}"
    .row.team-heading
     .col-md-1.col-md-offset-2= "ID"
     .col-md-3= "Team"
     .col-md-4= "Stadium"
    - @teams.each do |team|
     .row
      .col-md-1.col-md-offset-2= "#{team[:team_id]}"
      .col-md-3= link_to "#{team[:name]}", team_url(Team.find_by(team_id: team[:team_id]))
      .col-md-4= "#{team[:stadium]}"
 %li.list-group-item
  %h3.list-group-item-heading= "Round 1 Fixtures"
  %ul.list-group
   %li.list-group-item
    .row.list-group-item-heading
     .col-md-6.col-md-offset-3= "SCORING SUMMARY"
    - @fixtures.each do |fixture|
     .row.team-heading
      .col-md-3.col-md-offset-1.home-team
       = link_to "#{fixture[:home_team]}", team_url(Team.find_by(team_id: fixture[:home_team_id]))
      .col-md-1= "#{fixture[:home_goals]}"
      - if fixture[:time] == "Finished"
       .col-md-2= link_to "FT", report_fixture_url(Fixture.find_by(match_id: fixture[:match_id]))
      - else
       .col-md-2
       .col-md-1= "#{fixture[:away_goals]}"
       .col-md-3.away-team
        = link_to "#{fixture[:away_team]}", team_url(Team.find_by(team_id: fixture[:away_team_id]))
