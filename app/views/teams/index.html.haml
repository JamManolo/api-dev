%h2= "Teams#index"

%ul
 .row
  %strong
   .col-md-1= "ID"
   .col-md-2= "Country"
   .col-md-2= "Name"
   .col-md-3= "Stadium"
 - @teams.each do |team|
  .row
   .col-md-1= "#{team[:team_id]}"
   .col-md-2= "#{team[:country]}"
   .col-md-2= link_to "#{team[:name]}", team_url(team.id)
   .col-md-3= "#{team[:stadium]}"
