  %ul.list-group
   %li.list-group-item
    .row.list-group-item-heading
     / .col-md-1.away-team= "ID"
     .col-md-2.col-md-offset-1= "COUNTRY"
     .col-md-4= "CLUB"
     .col-md-4= "STADIUM"
    - @teams.each do |team|
     .row
      / .col-md-1.away-team= "#{team[:team_id]}"
      .col-md-2.col-md-offset-1= "#{team.country}"
      .col-md-4= link_to "#{team[:name]}", team_url(team.id)
      .col-md-4= team.stadium
      



